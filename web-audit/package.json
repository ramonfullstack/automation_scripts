{
  "name": "web-audit",
  "version": "1.0.0",
  "description": "Auditoria de requisições web com Playwright - captura Bearer tokens e tenant IDs",
  "main": "audit.mjs",
  "type": "module",
  "scripts": {
    "audit": "node audit.mjs",
    "audit:loop": "RUN_ONCE=false node audit.mjs",
    "audit:nohup": "RUN_ONCE=false nohup node audit.mjs > audit.log 2>&1 &",
    "audit:full": "node audit-full.mjs",
    "install:browsers": "npx playwright install"
  },
  "keywords": [
    "playwright",
    "audit",
    "security",
    "jwt",
    "bearer"
  ],
  "author": "Ramon Silva",
  "license": "ISC",
  "devDependencies": {
    "playwright": "^1.40.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
