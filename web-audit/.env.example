# Credenciais do ERP
ERP_USER=Ramon
ERP_PASS=dev123

# URLs (ajuste conforme necessário)
ERP_URL=https://erp.dev.inovepic.dev/#/login

# Endpoint alvo para auditoria
TARGET_API=http://localhost:5214/api/InventoryStock/GetInventoryStockSummary

# Configurações
HEADLESS=true
TIMEOUT_LOGIN=4000
ERP_OBSERVE_MS=8000

# Intervalo entre execuções (em minutos)
RUN_INTERVAL_MINUTES=30

# true = executa uma vez e sai; false = loop infinito
RUN_ONCE=true

# Arquivo de saída com token completo + tenant (NÃO commitar)
OUTPUT_FILE=./bearer_tenant.txt

# ERP (ambiente dev)
# true = tenta abrir e logar no ERP dev; false = audita só o frontend local
AUDIT_ERP=true

# Rota que abre a tela que dispara o resumo de estoque
ERP_STOCK_ROUTE=#/stock

# Timeout de navegação especificamente do ERP (ms)
TIMEOUT_NAV_ERP=60000
