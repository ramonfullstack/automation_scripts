# Endpoint alvo para auditoria
TARGET_API=http://localhost:5214/api/InventoryStock/GetInventoryStockSummary

# Configurações
HEADLESS=true
TIMEOUT_LOGIN=4000
TIMEOUT_OBSERVE=12000

# Quanto tempo observar o tráfego do frontend ao carregar (ms)
